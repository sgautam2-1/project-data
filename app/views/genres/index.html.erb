<!-- app/views/genres/index.html.erb -->
<h1>Genres</h1>
<ul>
  <% if @genres.any? %>
    <% @genres.each do |genre| %>
      <li>
        <h2><%= link_to "#{genre.name} (ID: #{genre.id})", genre_path(genre) %></h2>
        <ul>
          <% genre.books.each do |book| %>
            <li><%= link_to book.title, book_path(book) %></li>
          <% end %>
        </ul>
      </li>
    <% end %>
  <% else %>
    <li>No genres found.</li>
  <% end %>
</ul>
