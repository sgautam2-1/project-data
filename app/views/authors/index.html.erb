<h1>Authors</h1>

<div class="search-form">
  <%= form_with(url: authors_path, method: :get, local: true) do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search by author name", class: "border border-gray-300 rounded px-4 py-2 mr-2", autocomplete: "off" %>
    <%= select_tag :genre_id, options_for_select(@genres.pluck(:name, :id), params[:genre_id]), prompt: "Select genre", class: "border border-gray-300 rounded px-4 py-2" %>
    <%= submit_tag "Search", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>

<ul>
  <% if @authors.any? %>
    <% @authors.each do |author| %>
      <li><%= link_to author.name, author_path(author) %></li>
    <% end %>
  <% else %>
    <li>No authors found</li>
  <% end %>
</ul>

<%= paginate @authors %>
